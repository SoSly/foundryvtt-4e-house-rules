<form id="short-rest" class="dialog-content" onsubmit="event.preventDefault();">
	<p><strong>{{localize 'sosly.longRest.take'}}?</strong></p>
	<p>{{localize 'sosly.longRest.hint'}}:</p>
	<ul>
        {{#each benefits as |benefit|}}
            <li>{{benefit}}</li>
        {{/each}}
	</ul>

    <div class="form-group">
        <label>{{localize 'sosly.longRest.surgesToSpend'}}</label>
        <input type="text" name="surge" value="" placeholder=""/>
    </div>

    <div class="form-group">
        <label>{{localize 'sosly.longRest.bonusHealing'}}</label>
        <input type="text" name="bonus" value="" placeholder="{{ localize 'DND4E.RollExample' }}"/>
    </div>

    <div class="form-group">
        <label>{{localize 'sosly.longRest.daily'}}</label>
        <select name="daily">
            {{#each dailies as |power|}}
                <option value="{{power.id}}">{{power.name}}</option>
            {{/each}}
        </select>
    </div>

    <div class="dialog-buttons">
		<button type="submit" name="submit">{{localize 'sosly.longRest.take'}}</button>
    </div>

</form>